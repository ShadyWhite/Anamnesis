#### Naming styles ####


# ---------------------------------------------------------------------------------------- #
# Naming rules
# Based on:
# - https://learn.microsoft.com/en-us/dotnet/csharp/fundamentals/coding-style/identifier-names
# - https://learn.microsoft.com/en-us/dotnet/standard/design-guidelines/names-of-type-members

## Interfaces: begins with 'I'
dotnet_naming_rule.interface_should_be_begins_with_i.severity = suggestion
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_begins_with_i.style = begins_with_i

## Types: PascalCase
dotnet_naming_rule.types_should_be_pascal_case.severity = suggestion
dotnet_naming_rule.types_should_be_pascal_case.symbols = types
dotnet_naming_rule.types_should_be_pascal_case.style = pascal_style

## Non-field members: PascalCase
dotnet_naming_rule.non_field_members_should_be_pascal_case.symbols = non_field_members
dotnet_naming_rule.non_field_members_should_be_pascal_case.style = pascal_style
dotnet_naming_rule.non_field_members_should_be_pascal_case.severity = warning

## Constant fields: UPPER_CASE_WITH_UNDERSCORES
dotnet_naming_rule.constants_with_underscores.symbols  = constant_fields
dotnet_naming_rule.constants_with_underscores.style = all_upper_style
dotnet_naming_rule.constants_with_underscores.severity = warning

## Non-private fields: PascalCase
dotnet_naming_rule.nonprivate_fields_pascal.symbols  = nonprivate_fields
dotnet_naming_rule.nonprivate_fields_pascal.style = pascal_style
dotnet_naming_rule.nonprivate_fields_pascal.severity = warning

## Private fields: camelCase
dotnet_naming_rule.private_fields.symbols = private_instance_fields
dotnet_naming_rule.private_fields.style = camel_style
dotnet_naming_rule.private_fields.severity = warning

## Static fields: begins with 's_' and camelCase for private/internal
dotnet_naming_rule.static_private_fields_should_begin_with_s_.symbols = static_private_fields
dotnet_naming_rule.static_private_fields_should_begin_with_s_.style = static_field_private_style
dotnet_naming_rule.static_private_fields_should_begin_with_s_.severity = warning

## Static fields: PascalCase for non-private
dotnet_naming_rule.static_nonprivate_fields_should_begin_with_s_.symbols = static_nonprivate_fields
dotnet_naming_rule.static_nonprivate_fields_should_begin_with_s_.style = pascal_style
dotnet_naming_rule.static_nonprivate_fields_should_begin_with_s_.severity = warning

## Thread static fields: begins with 't_'
dotnet_naming_rule.thread_static_fields_should_begin_with_t_.symbols = thread_static_fields
dotnet_naming_rule.thread_static_fields_should_begin_with_t_.style = thread_static_field_style
dotnet_naming_rule.thread_static_fields_should_begin_with_t_.severity = warning

# ---------------------------------------------------------------------------------------- #
# Symbol specifications

## Apply interface naming rules to interfaces
dotnet_naming_symbols.interface.applicable_kinds = interface
dotnet_naming_symbols.interface.applicable_accessibilities = *
dotnet_naming_symbols.interface.required_modifiers = 

## Apply PascalCase naming rules to types
dotnet_naming_symbols.types.applicable_kinds = class, struct, interface, enum
dotnet_naming_symbols.types.applicable_accessibilities = *
dotnet_naming_symbols.types.required_modifiers = 

## Apply PascalCase naming rules to non-field members
dotnet_naming_symbols.non_field_members.applicable_kinds = property, event, method
dotnet_naming_symbols.non_field_members.applicable_accessibilities = *
dotnet_naming_symbols.non_field_members.required_modifiers = 

## Apply constant naming rules to fields with 'const' modifier of any accessibility
dotnet_naming_symbols.constant_fields.applicable_kinds = field
dotnet_naming_symbols.constant_fields.applicable_accessibilities = *
dotnet_naming_symbols.constant_fields.required_modifiers = const

## Apply PascalCase naming rules to non-private fields
dotnet_naming_symbols.nonprivate_fields.applicable_kinds = field
dotnet_naming_symbols.nonprivate_fields.applicable_accessibilities = public, protected, protected_internal, private_protected
dotnet_naming_symbols.nonprivate_fields.required_modifiers =

## Apply camelCase naming rules to private/internal instance fields
dotnet_naming_symbols.private_instance_fields.applicable_kinds = field
dotnet_naming_symbols.private_instance_fields.applicable_accessibilities = private, internal
dotnet_naming_symbols.private_instance_fields.required_modifiers =

## Apply static field naming rules
dotnet_naming_symbols.static_private_fields.applicable_kinds = field
dotnet_naming_symbols.static_private_fields.applicable_accessibilities = private, internal
dotnet_naming_symbols.static_private_fields.required_modifiers = static

dotnet_naming_symbols.static_nonprivate_fields.applicable_kinds = field
dotnet_naming_symbols.static_nonprivate_fields.applicable_accessibilities = public, protected, protected_internal, private_protected
dotnet_naming_symbols.static_nonprivate_fields.required_modifiers = static

## Apply thread static field naming rules to fields with 'thread_static' modifier of any accessibility
dotnet_naming_symbols.thread_static_fields.applicable_kinds = field
dotnet_naming_symbols.thread_static_fields.applicable_accessibilities = *
dotnet_naming_symbols.thread_static_fields.required_modifiers = thread_static

